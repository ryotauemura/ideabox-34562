<div class="like-link" id="like-link-<%= @idea.id %>">
  <% if current_user.likes.find_by(idea_id: @idea.id) %>
    <%= link_to unlike_path(@idea.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤︎<%= @idea.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(@idea.id), method: :post, remote: true do %>
        <div class = "iine__button">♡<%= @idea.likes.count %></div>
    <% end %>
  <% end %>
</div>