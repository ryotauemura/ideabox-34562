<header class="simple_title">
  <h1>Ideabox</h1>
</header>

<h1 class="member_content_title">新規登録</h1>

<main>
  <div class="member_content">
     
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field"> 
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
          <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) idea次郎", maxlength:"30" %>
      </div>
  
      <div class="field">
        <div class='form-text-wrap'>
          <%= f.label :メールアドレス %><br />
          <span class="indispensable">必須</span>
        </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "60x20" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <%= f.label :パスワード %>  
          <% if @minimum_password_length %>
          <em>(半角英数字６文字以上)</em>
          <% end %><br />
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", size: "60x20" %>
      </div>

      <div class="field">
         <div class='form-text-wrap'>
           <%= f.label :もう一度パスワードを入力してください %><br />
           <span class="indispensable">必須</span>
         </div>
           <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "60x20" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">名前</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 佐藤" %>
          <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 勇次郎" %>
        </div>
      </div>

      <div class="field">
         <div class='form-text-wrap'>
          <label class="form-text">名前(カナ)</label>
          <span class="indispensable">必須</span>
        </div> 
        <div class='input-name-wrap'>
          <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) サトウ" %>
          <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ユウジロウ" %>
        </div>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
          <span class="indispensable">必須</span>
        </div> 
        <div class='input-birth-wrap'>
         <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div> 
      
      <div class="actions">
        <%= f.submit "登録" ,class:"actions-btn" %>
      </div>
    <% end %>
  </div>
</main>