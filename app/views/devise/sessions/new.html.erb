<header class="simple_title">
  <h1>Ideabox</h1>
</header>

<h2 class="login">ログイン</h2>

<main>
  <div class="member_content">    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class='form-text-wrap'>
          <%= f.label :メールアドレス %><br />
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "60x20"  %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <%= f.label :パスワード %><br />
          <span class="indispensable">必須</span>
        </div>
          <%= f.password_field :password, autocomplete: "current-password", size: "60x20"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "ログイン",class:"actions-btn" %>
      </div>
    <% end %>
  </div>
</main>

<%= render "devise/shared/links" %>
