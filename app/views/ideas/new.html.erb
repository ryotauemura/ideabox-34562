<%= form_with model: @idea, local: true do |f| %>

  <%#= render 'shared/error_messages', model: f.object %>

  <%# タイトルとアイディアの目的 %>
  <div class="new-ideas">  
    <div class="weight-bold-text">
      アイディアのタイトル
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :title, class:"ideas-text", id:"idea-title", placeholder:"アイディアのタイトル (必須 50文字まで) 例) 訛りを翻訳するアプリが欲しい", maxlength:"50" %>
    <div class="ideas-detail">
      <div class="weight-bold-text">
          アイディアの目的
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :purpose, class:"ideas-text", id:"ideas-purpose", placeholder:"アイディアの目的 (必須 100文字まで) 例) 地方の方とコミュニケーションをと利やすくなる", maxlength:"100" %>
    </div>
  </div>

  <%# アイディアの説明 %>
  <div class="ideas-explain">
    <div class="weight-bold-text">
      アイディアの説明
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :description, class:"ideas-text", id:"idea-info", placeholder:"アイディアの説明 (必須 1,000文字まで) 例) 英語翻訳アプリのように、スマホに話してもらうと翻訳される",rows:"8" ,maxlength:"1000" %>
  </div>

  <%# アイディアのカテゴリー %>
  <div class="weight-bold-text">
      カテゴリー
      <span class="indispensable">必須</span>
  </div>
    <%#= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  
  <%# 下部ボタン %>
  <div class="post-btn-contents">
    <%= f.submit "投稿する" ,class:"post-btn" %>
    <%=link_to '戻る', root_path, class:"back-btn" %>
  </div> 
<% end %>
